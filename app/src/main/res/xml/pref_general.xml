<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="api_root_url"
        android:title="API root URL"
        android:defaultValue="http://buendia.whitespell.com:8080/"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />


    <!-- A checkbox for choosing to use OpenMRS as the backing server rather than the normal
      buendia server -->
    <CheckBoxPreference
        android:key="use_openmrs"
        android:title="@string/pref_title_use_openmrs"
        android:summary="@string/pref_description_use_openmrs"
        android:defaultValue="true" />

    <!-- the server to use for OpenMRS -->
    <EditTextPreference
        android:key="openmrs_root_url"
        android:title="@string/pref_title_openmrs_root_url"
        android:defaultValue="http://localhost:8080/openmrs"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
